# ===========================================
# Infrastructure Service - Environment Variables
# ===========================================

# Application
NODE_ENV=development
PORT=4005
API_PREFIX=api

# CORS
CORS_ORIGIN=*

# ===========================================
# Database PostgreSQL
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=immo360_infradb
DB_PASSWORD=your_password_here
DB_DATABASE=immo360_infrastructure
DB_LOGGING=true
DB_SSL=false
DB_POOL_SIZE=10
DB_SYNCHRONIZE=false
DB_AUTO_LOAD_ENTITIES=true

# ===========================================
# RabbitMQ
# ===========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=infrastructure_queue
RABBITMQ_EXCHANGE=immo360_exchange
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# ===========================================
# JWT (pour validation des tokens)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256
JWT_ISSUER=immo360-auth-service
JWT_AUDIENCE=immo360-infrastructure-service

# ===========================================
# Session Configuration
# ===========================================
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000
SESSION_NAME=immo360_infrastructure_session

# ===========================================
# Redis (pour cache et sessions)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=combined

# ===========================================
# Service URLs (inter-service communication)
# ===========================================
AUTH_SERVICE_URL=http://localhost:4001
USER_SERVICE_URL=http://localhost:4002
INCIDENT_SERVICE_URL=http://localhost:4003
PLANNING_SERVICE_URL=http://localhost:4004

# ===========================================
# File Upload
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=xlsx,xls,csv

# ===========================================
# Swagger Documentation
# ===========================================
SWAGGER_ENABLED=true
SWAGGER_TITLE=Immo360 Infrastructure Service API
SWAGGER_DESCRIPTION=API de gestion des infrastructures (batiments, etages, espaces, equipements)
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=docs
